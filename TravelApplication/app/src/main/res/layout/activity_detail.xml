<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/buttonBackDetail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_baseline_arrow_back_24"/>
    <TextView
        android:id="@+id/textviewThongTinCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết"
        android:textSize="25sp"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/buttonBackDetail"/>

    <ImageView
        android:id="@+id/imageViewPicture_dt"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/textviewThongTinCT"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textviewName_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPicture_dt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Ten"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewNameProvince_dt"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/textviewName_dt"
        android:layout_centerHorizontal="true"
        android:text="Tên tinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewPrice_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewNameProvince_dt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Tên gia"
        android:textColor="@color/purple_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textviewDescribe_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewPrice_dt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="20dp"
        android:text="mo ta"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-light"/>
</RelativeLayout>